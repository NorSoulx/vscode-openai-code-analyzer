{
  "name": "openai-code-analyzer",
  "displayName": "OpenAI Code Analyzer",
  "description": "Analyze and summarize code snippets using OpenAI GPT technology in Visual Studio Code.",
  "icon": "images/icon_128x128.png",
  "version": "1.0.2",
  "publisher": "NorSoulx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NorSoulx/vscode-openai-code-analyzer.git"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.summarizeCode",
        "title": "Summarize Code"
      }
    ],
    "configuration": {
      "title": "OpenAI Code Analyzer",
      "properties": {
        "openaiCodeAnalyzer.maxTokens": {
          "type": "integer",
          "default": 300,
          "description": "Set the maximum number of tokens for the code summary generated by OpenAI API."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./node_modules/vscode-test/out/runTest",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
